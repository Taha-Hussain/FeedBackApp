<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mohsin.feedbackapp.Urdu_first"
    android:id="@+id/camview1">

    <ImageButton
        android:layout_width="115dp"
        android:layout_height="228dp"
        android:id="@+id/urdu_smiley"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:scaleType="fitXY"
        android:src="@drawable/urdu_acccc"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:background="#00000000" />

    <ImageButton
        android:layout_width="115dp"
        android:layout_height="228dp"
        android:id="@+id/urdu_neutral"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:scaleType="fitXY"
        android:src="@drawable/urdu_accc"
        android:layout_alignBottom="@+id/urdu_smiley"
        android:layout_centerHorizontal="true"
        android:background="#00000000" />

    <ImageButton
        android:layout_width="115dp"
        android:layout_height="228dp"
        android:id="@+id/urdu_sad"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:scaleType="fitXY"
        android:src="@drawable/urdu_ac"
        android:background="#00000000" />

    <SurfaceView
        android:id="@+id/sview1"
        android:layout_width="1dip"
        android:layout_height="1dip"
        />

    <ImageView
        android:id="@+id/camera_image1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name" />
</RelativeLayout>
